{% if articles|default %}

<div class="carousel slide" data-ride="carousel" id="carousel">
    <ol class="carousel-indicators">
        {% for articles in articles %}
            <li {% if loop.index0 == 0 %} class="active" {% endif %} data-target="#carousel" data-slide-to="{{loop.index0}}" aria-current="location"></li>

    {% endfor %}

</ol>
<div class="carousel-inner">

    {% set existingIds = [] %}
    {% for articles in articles %}
    {% if articles.id not in existingIds %}
        <div {% if loop.index0 == 0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>


            <img alt='{{articles.nameimage}}' class='d-block d-md-block mx-auto w-50' src='{{ '/uploads/' ~ articles.nameimage}}'>
            <div class="carousel-caption d-none d-md-block">
                <h5>{{articles.title}}</h5>
                <p>{{articles.status}}</p>
            </div>
        </div>
        {% endif %}
    {% endfor %}

</div>
<a class="carousel-control-prev dark" data-slide="prev" href="#carousel" role="button" id="prevCrsl">
