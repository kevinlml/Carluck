                        <td><img src="{{ '/uploads/' ~ image.nameimage}}" alt=""
                        style="max-width: 100%;max-height: 100%;display: block;"></td>

                        {% endfor %}

                         {% endfor %}
                    </tr>
            </tbody>
        </table>
        </div>

    <table class="table table-striped" id="ads" style='text-align:center;'>

        <thead>
            <tr>
                <th>Article Image</th>
                <th>Article Information</th>
            </tr>
        </thead>
        <tbody>
{% set existingIds = [] %}
            <tr>{% for images in ads.images %}

                    {% if images.id not in existingIds %}
                <td><img src="{{ '/uploads/' ~ images.nameimage}}" alt=""
                style="max-width: 100%;max-height: 100%;display: block;"></td>
                 {% endif %}
                {% endfor %}
                <td>Title : {{ ads.title }}
                <hr> Information : {{ ads.description }} <hr>
                Category : {{ ads.category  }} <hr>
                Date created : {{ ads.createdAt | date("d/m/y") }}</td>
            </tr>
        </tbody>
    </table>
    <div class="container py-5">
            <div class="container">
            <div class="card border-secondary mb-3" id="tableregistration">
                <div class="card-header" id="tablenoposts">
                    <h1>{{ ads.title }}</h1>
                </div>
                <div class="d-flex justify-content-center">


                    <p>{{ ads.description }}</p>
                    <p>{{ ads.status  }}</p>
                    <p>{{ ads.year  }}</p>
                    <p>{{ ads.manufacturer  }}</p>
                    <p>{{ ads.model  }}</p>
