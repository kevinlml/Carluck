                    <p>{{ ads.kilometres  }}</p>
                    <p>{{ ads.cylender  }}</p>
                    <p>{{ ads.transmission  }}</p>
                    <p>{{ ads.drivertrain  }}</p>
                    <p>{{ ads.outcolour  }}</p>
                    <p>{{ ads.incolour  }}</p>
